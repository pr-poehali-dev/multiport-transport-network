{
  "tests": [
    {
      "name": "GET - API info",
      "method": "GET",
      "expectedStatus": 200,
      "expectedBody": {
        "message": "string",
        "description": "string",
        "status": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "POST create - new spreadsheet",
      "method": "POST",
      "body": {
        "action": "create",
        "name": "Test Sheet",
        "rows": 5,
        "cols": 5
      },
      "expectedStatus": 201,
      "expectedBody": {
        "id": "string",
        "name": "Test Sheet",
        "rows": 5,
        "cols": 5,
        "data": "array",
        "message": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "POST read - read data range",
      "method": "POST",
      "body": {
        "action": "read",
        "sheetId": "sheet_123",
        "startRow": 0,
        "endRow": 2,
        "startCol": 0,
        "endCol": 3
      },
      "expectedStatus": 200,
      "expectedBody": {
        "sheetId": "string",
        "data": "array",
        "message": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "POST update - update cell",
      "method": "POST",
      "body": {
        "action": "update",
        "sheetId": "sheet_123",
        "row": 1,
        "col": 2,
        "value": "Updated Value"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "sheetId": "string",
        "cell": "object",
        "updated": true,
        "message": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "POST delete - delete row",
      "method": "POST",
      "body": {
        "action": "delete",
        "sheetId": "sheet_123",
        "type": "row",
        "index": 2
      },
      "expectedStatus": 200,
      "expectedBody": {
        "sheetId": "string",
        "deleted": "object",
        "message": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "POST invalid action",
      "method": "POST",
      "body": {
        "action": "invalid_action"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string",
        "validActions": "array"
      },
      "bodyMatcher": "partial"
    }
  ]
}